{
  "name": "first-game",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple terminal-based game",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "server": "node src/server/server.js",
    "test": "vitest run",
    "test:debug": "vitest --reporter=hanging-process run",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "husky"
  },
  "keywords": [
    "game",
    "terminal",
    "ascii"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ansi-escapes": "^7.2.0",
    "chalk": "^5.6.2",
    "cli-cursor": "^5.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "vitest": "^4.0.16"
  }
}
