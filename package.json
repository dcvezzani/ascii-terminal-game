{
  "name": "@dcvezzani/ascii-tag",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple terminal-based game",
  "main": "src/index.js",
  "engines": { "node": ">=22" },
  "bin": { "ascii-tag": "src/cli.js" },
  "files": ["src", "dist/boards", "README.md"],
  "scripts": {
    "start": "node src/index.js",
    "server": "node src/server/index.js",
    "server:debug": "node --inspect-brk src/server/index.js",
    "client": "node src/index.js",
    "map:deserialize": "node scripts/deserializeBoard.js",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "diagrams:generate": "node scripts/generate-diagrams.js"
  },
  "keywords": [
    "game",
    "terminal",
    "ascii"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ansi-escapes": "^7.2.0",
    "chalk": "^5.6.2",
    "cli-cursor": "^5.0.0",
    "ws": "^8.18.3",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "vitest": "^4.0.16"
  }
}
